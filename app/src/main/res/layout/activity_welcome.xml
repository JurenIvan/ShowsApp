<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.WelcomeActivity">

    <ImageView
            android:id="@+id/welcome_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_placeholder_registration"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:fontFamily="@font/karla_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/youreIn"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textAlignment="center"
            android:id="@+id/textView"
            android:textColor="#2e2e2e"

            app:layout_constraintTop_toBottomOf="@+id/welcome_pic"

    />

    <TextView
            android:id="@+id/welcome_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Welcome juren.ivan@gmail.com"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>